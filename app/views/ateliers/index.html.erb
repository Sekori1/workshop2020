<h1>Ateliers</h1>
<h2><%= @asso.name %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Slots</th>
      <th>Min age</th>
      <th>Max age</th>
      <th>Media</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ateliers.each do |atelier| %>
      <tr>
        <td><%= atelier.name %></td>
        <td><%= atelier.asso.name %></td>
        <td><%= link_to 'Show Asso', [@asso] %></td>
        <td><%= atelier.description %></td>
        <td><%= atelier.slots %></td>
        <td><%= atelier.min_age %></td>
        <td><%= atelier.max_age %></td>
        <td><%= atelier.media %></td>
        <td><%= link_to 'Show', [@asso, atelier] %></td>
        <td><%= link_to 'Edit', edit_asso_atelier_path(@asso, atelier) %></td>
        <td><%= link_to 'Destroy', [@asso, atelier], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Atelier', new_asso_atelier_path(@asso) %>
