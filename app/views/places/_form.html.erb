
<%= simple_form_for(@place) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :zipcode %>
    <%= f.input :city %>
    <%= f.input :lat %>
    <%= f.input :long %>
    <%= f.input :phone %>
    <%= f.input :region %>
    <%= f.input :infos %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
