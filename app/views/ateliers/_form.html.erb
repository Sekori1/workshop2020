
<%= simple_form_for(@atelier) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :slots %>
    <%= f.input :min_age %>
    <%= f.input :max_age %>
    <%= f.input :media %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
