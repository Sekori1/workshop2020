<h1 class="h2">Nos associations</h1>
<div class="row">
  <div class="col-auto my-1">
      <label class="mr-sm-2" for="inlineFormCustomSelect">RÃ©gion</label>
      <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
        <option selected>Toutes</option>
         <% @regions.each do |region| %>
          <option value="<%= region.num %>"><%= region.displayname %></option>
        <% end %>
      </select>
  </div>
  <div class="col-md-12 mt-4 mb-4">
    <% @associations.each do |association| %>
      <%= link_to association do %>    
        <div class="card">
          <div class="card-body">
            <p class="h3 card-title"><%= association.name %></p>
            <p class="card-subtitle text-muted"><%= association.region %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>