<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th>Slots</th>
      <th>Min age</th>
      <th>Max age</th>
      <th>Media</th>
      <th>Start hour</th>
      <th>End hour</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.slots %></td>
        <td><%= event.min_age %></td>
        <td><%= event.max_age %></td>
        <td><%= event.media %></td>
        <td><%= event.start_hour %></td>
        <td><%= event.end_hour %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

