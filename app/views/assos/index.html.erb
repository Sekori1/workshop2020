<h1 class="h2">Nos associations</h1>
<div class="row">
  <div class="col-auto my-1">
      <label class="mr-sm-2" for="regionSelect">Région</label>
      <select class="custom-select mr-sm-2" id="regionSelect">
        <option value="-1" selected>Toutes</option>
         <% @regions.each do |region| %>
          <option value="<%= region.num %>"><%= region.displayname %></option>
        <% end %>
      </select>
  </div>
  <div class="col-auto my-1">
      <label class="mr-sm-2" for="departementSelect">Département</label>
      <select class="custom-select mr-sm-2" id="departementSelect">
        <option value="-1" selected>Tous</option>
         <% @departements.each do |departement| %>
          <option value="<%= departement.name %>" data-reg="<%= departement.region.num %>"><%= departement.numero %></option>
        <% end %>
      </select>
  </div>
  <div class="col-md-12 mt-4 mb-4">
    <% @assos.each do |asso| %>
      <%= link_to asso do %>
        <div class="card asso" data-dep="<%= asso.departement.name %>">
          <div class="card-body">
            <p class="h3 card-title"><%= asso.name %></p>
            <p class="card-subtitle text-muted"><%= asso.departement %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>