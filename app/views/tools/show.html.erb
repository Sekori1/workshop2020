<h1><%= @tool.name %></h1>
<div class="row align-items-center">
  <div class="col-sm">
    <img class="img-full" src="<%= @tool.media %>">
  </div>
  <div class="col-sm">
    <h2>Description</h2>
    <p><%= @tool.description %></p>
  </div>
</div>
<% if @tool.metiers.length() != 0 %>
	<h2>Métier associé</h2>
	<div class="row">
		<% @tool.metiers.each do |metier| %>
			<%= link_to metier, class:"row col-md-2 mt-2" do %>
				<div>
					<div class="container">
						<img src="<%= metier.media %>" class="img-thumbnail" alt="">
						<p class=""><%= metier.name %></p>
					</div>
				</div>
			<% end %>
		<% end %>
	</div>
<% end %>