
<%= simple_form_for(@metier) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :media %>
    <%= f.input :training %>
    <%= f.input :explanation %>
    <%= f.association :tools, :as => :check_boxes , :conditions => { :active => true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
