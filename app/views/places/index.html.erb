<p id="notice"><%= notice %></p>

<h1>Places</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Zipcode</th>
      <th>City</th>
      <th>Lat</th>
      <th>Long</th>
      <th>Phone</th>
      <th>Region</th>
      <th>Infos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.name %></td>
        <td><%= place.address %></td>
        <td><%= place.zipcode %></td>
        <td><%= place.city %></td>
        <td><%= place.lat %></td>
        <td><%= place.long %></td>
        <td><%= place.phone %></td>
        <td><%= place.region %></td>
        <td><%= place.infos %></td>
        <td><%= link_to 'Show', place %></td>
        <td><%= link_to 'Edit', edit_place_path(place) %></td>
        <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

